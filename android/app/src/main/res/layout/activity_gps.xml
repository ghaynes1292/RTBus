<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/routeNameInput"
            android:autoText="true"
            android:hint="Route Name"
            android:layout_weight="0.39" />

        <Button
            android:id="@+id/Button01"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Create Route"
            android:layout_weight="0.03" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/stopNameInput"
            android:hint="Stop Name"
            android:layout_weight="1" />

        <Button
            android:id="@+id/Button02"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="Mark Stop" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Waiting for GPS Signal..."
        android:gravity="center"
        android:id="@+id/GPSStatusText"
        android:fontFamily="sans-serif-thin"
        android:layout_gravity="center_horizontal"
        android:textSize="16dp" />
</LinearLayout>

